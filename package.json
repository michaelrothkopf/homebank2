{
  "name": "homebank2",
  "version": "1.0.0",
  "description": "Version 2 of Homebank",
  "main": "nodemon src/packages/backend/index.ts",
  "repository": "https://github.com/mrbros35/homebank2.git",
  "author": "mrbros35",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/node": "*",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/uuid": "^8.3.0",
    "body-parser": "^1.19.0",
    "bulma": "^0.9.3",
    "chalk": "^4.1.1",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "next": "^11.0.1",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "babel-loader": "^8.2.2",
    "eslint": "^7.29.0",
    "eslint-config-next": "^11.0.1",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36"
  },
  "scripts": {
    "docs": "npx typedoc ./src",
    "clean": "npx rimraf ./dist",
    "mkdir:dist": "npx mkdirp ./dist",
    "mkdir:dist:packages": "npx mkdirp ./dist/packages",
    "mkdir:dist:packages:server": "npx mkdirp ./dist/packages/server",
    "mkdir:dist:packages:web": "npx mkdirp ./dist/packages/web",
    "mkdir": "yarn run mkdir:dist && yarn run mkdir:dist:packages && yarn run mkdir:dist:packages:server && yarn run mkdir:dist:packages:web",
    "prepareBuild": "yarn run clean && yarn run mkdir",
    "compile:backend": "npx tsc",
    "compile:frontend": "npx next build ./src/packages/web",
    "compile": "yarn run compile:backend && yarn run compile:frontend",
    "makeBuild": "yarn run compile",
    "copy:config": "npx ncp ./src/packages/server/config ./dist/packages/server/config",
    "copy:web": "npx ncp ./src/packages/web ./dist/packages/web",
    "copy": "yarn run copy:config && yarn run copy:web",
    "postBuild": "yarn run copy",
    "build": "yarn run prepareBuild && yarn run makeBuild && yarn run postBuild",
    "server:backend": "nodemon ./dist/packages/server/index.js",
    "server:frontend": "npx next start ./dist/packages/web",
    "server": "npm-run-all --parallel server:backend server:frontend",
    "server:dev:backend": "nodemon ./src/packages/server/index.ts",
    "server:dev:frontend": "npx next dev ./src/packages/web",
    "server:dev": "npm-run-all --parallel server:dev:backend server:dev:frontend",
    "dev": "yarn run server:dev",
    "start": "yarn run build && yarn run server"
  }
}
