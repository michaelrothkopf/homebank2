  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/node": "*",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/uuid": "^8.3.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "babel-loader": "^8.2.2",
    "html-webpack-plugin": "^5.3.1",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "docs": "npx typedoc ./src",
    "clean": "npx rimraf ./dist",
    "mkdir:dist": "npx mkdirp ./dist",
    "mkdir:dist:public": "npx mkdirp ./dist/public",
    "mkdir:dist:public:img": "npx mkdirp ./dist/public/img",
    "mkdir": "yarn run mkdir:dist && yarn run mkdir:dist:public && yarn run mkdir:dist:public:img",
    "prepareBuild": "yarn run clean && yarn run mkdir",
    "compile:backend": "tsc",
    "compile:frontend": "webpack --config webpack.config.client.js",
    "compile": "yarn run compile:backend && yarn run compile:frontend",
    "makeBuild": "yarn run compile",
    "copy:config": "npx ncp ./src/packages/config ./dist/config",
    "copy:html": "npx ncp ./src/packages/html ./dist/html",
    "copy:public": "npx ncp ./src/packages/public/img ./dist/public/img",
    "copy": "yarn run copy:config && yarn run copy:html && yarn run copy:public",
    "postBuild": "yarn run copy",
    "build": "yarn run prepareBuild && yarn run makeBuild && yarn run postBuild",
    "server": "nodemon ./dist/index.js",
    "dev": "yarn run server:dev",
    "start": "yarn run build && yarn run server"
  }
}
